@model Employee

<div class="row">
    <div class="col-md-6">
        <h5>Personal Information</h5>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Gender:</strong> @Model.Gender</p>
        <p><strong>Date of Birth:</strong> @(Model.DateOfBirth?.ToShortDateString() ?? "N/A")</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Address:</strong> @Model.CompleteAddress</p>
    </div>
    <div class="col-md-6">
        <h5>Job Details</h5>
        <p><strong>Department:</strong> @Model.Department.Name</p>
        <p><strong>Job Title:</strong> @Model.JobTitle.Name</p>
        <p><strong>Date Hired:</strong> @Model.DateHired.ToShortDateString()</p>
        <p><strong>Status:</strong> @(Model.EmploymentStatus ? "Active" : "Inactive")</p>
        <p><strong>Resignation Date:</strong> @(Model.ResignationDate?.ToShortDateString() ?? "N/A")</p>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-12">
        <h5>Emergency Contact</h5>
        <p><strong>Name:</strong> @Model.EmergencyContactName</p>
        <p><strong>Phone:</strong> @Model.EmergencyContactPhone</p>
        <p><strong>Relation:</strong> @Model.EmergencyContactRelation</p>
    </div>
</div>