<!-- Views/Employee/ManageEmployees.cshtml 
Here we will view all the employees, there is an option to view and edit. It will display as a modal form -->

@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Manage Employees";
}

<h2 class="mb-4">Manage Employees</h2>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.Any())
            {
                <table id="employeesTable" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Full Name</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Department</th>
                            <th>Job Title</th>
                            <th>Date Hired</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.FullName</td>
                                <td>@employee.Gender</td>
                                <td>@employee.Email</td>
                                <td>@employee.Phone</td>
                                <td>@employee.Department.Name</td>
                                <td>@employee.JobTitle.Name</td>
                                <td>@employee.DateHired.ToShortDateString()</td>
                                <td>
                                    @if (employee.EmploymentStatus)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-warning btn-sm edit-employee" data-id="@employee.EmployeeID">
                                        <i class="fas fa-edit"></i> <!-- Pencil Icon -->
                                    </button>
                                    <button class="btn btn-info btn-sm view-employee" data-id="@employee.EmployeeID">
                                        <i class="fas fa-eye"></i> <!-- Eye Icon -->
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No employees found.
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal for Employee Details -->
<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="employeeModalLabel">Employee Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Employee details will be loaded here -->
                <div id="employeeDetails"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveSalary">Save</button> <!-- Only saves the salary -->
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });

            // Handle "View" button click
            $('.view-employee').on('click', function () {
                var employeeId = $(this).data('id');
                $.ajax({
                    url: '/Employee/GetEmployeeDetails',
                    type: 'GET',
                    data: { id: employeeId },
                    success: function (response) {
                        $('#employeeDetails').html(response);
                        $('#employeeModal').modal('show');
                    },
                    error: function () {
                        alert('An error occurred while fetching employee details.');
                    }
                });
            });

            // Handle "Edit" button click
            $('.edit-employee').on('click', function () {
                var employeeId = $(this).data('id');
                $.ajax({
                    url: '/Employee/GetEmployeeForEdit',
                    type: 'GET',
                    data: { id: employeeId },
                    success: function (response) {
                        $('#employeeDetails').html(response);
                        $('#employeeModal').modal('show');
                    },
                    error: function () {
                        alert('An error occurred while fetching employee details for editing.');
                    }
                });
            });

            // Handle "Save Salary" button click
            $('#saveSalary').on('click', function () {
                var employeeId = $('#employeeDetails').find('#EmployeeID').val(); // Get EmployeeID from the hidden field
                var monthlySalary = $('#MonthlySalary').val();
                var effectiveDate = $('#EffectiveDate').val();
                var isCurrent = $('#IsCurrent').val();

                // Validate inputs
                if (!monthlySalary || !effectiveDate) {
                    alert('Please fill in all required fields.');
                    return;
                }

                // Prepare data for AJAX request
                var salaryData = {
                    EmployeeID: employeeId,
                    MonthlySalary: monthlySalary,
                    EffectiveDate: effectiveDate,
                    IsCurrent: isCurrent === "true"
                };

                // Send AJAX request to add/update salary
                $.ajax({
                    url: '/Employee/AddOrUpdateSalary',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(salaryData),
                    success: function (response) {
                        if (response.success) {
                            alert('Salary saved successfully!');
                            $('#employeeModal').modal('hide');
                            location.reload(); // Refresh the page to reflect changes
                        } else {
                            alert('An error occurred while saving the salary.');
                        }
                    },
                    error: function () {
                        alert('An error occurred while saving the salary.');
                    }
                });
            });
        });
    </script>
}