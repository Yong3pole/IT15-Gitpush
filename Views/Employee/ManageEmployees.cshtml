@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Manage Employees";
}

<h2 class="mb-4">Manage Employees</h2>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table id="employeesTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Department</th>
                        <th>Job Title</th>
                        <th>Date Hired</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.FullName</td>
                            <td>@employee.Gender</td>
                            <td>@employee.Email</td>
                            <td>@employee.Phone</td>
                            <td>@employee.Department.Name</td>
                            <td>@employee.JobTitle.Name</td>
                            <td>@employee.DateHired.ToShortDateString()</td>
                            <td>
                                @if (employee.EmploymentStatus)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeID })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> <!-- Pencil Icon -->
                                </a>
                                <a href="@Url.Action("Details", "Employee", new { id = employee.EmployeeID })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> <!-- Eye Icon -->
                                </a>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#employeesTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
    });
</script>
