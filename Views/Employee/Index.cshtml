
@{
    ViewData["Title"] = "Manage Employees";
}

<h2>Manage Employees Page</h2>
<p>Manage Employees Page</p>

<div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 mb-3">
        <!-- Smaller column size -->
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h5 class="card-title">Total Employees</h5>
                <p class="card-text fs-4">@ViewData["EmployeeCount"]</p>
                <a href="@Url.Action("ManageEmployees", "Employee")" class="btn btn-light btn-sm">Manage</a> <!-- Smaller button -->
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-3">
        <!-- Smaller column size -->
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h5 class="card-title">Departments</h5>
                <p class="card-text fs-4">@ViewData["DepartmentCount"]</p>
                <a href="@Url.Action("Index", "Organization")" class="btn btn-light btn-sm">View</a> <!-- Smaller button -->
            </div>
        </div>
    </div>
</div>

