@model VerifyResetOtpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Verify OTP - HubWork</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">

    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h4 class="text-center mb-3">Enter OTP</h4>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@TempData["ErrorMessage"]'
                });
            </script>
        }

        <form asp-action="VerifyResetOtp" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="otp" class="form-label">OTP Code</label>
                <input type="text" id="otp" name="Otp" class="form-control" required maxlength="6" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Verify</button>
        </form>

        <p class="text-muted text-center mt-2" style="font-size: 0.9rem;">
            Didn’t receive the code? Check your phone or ask to resend.
        </p>
    </div>

</body>
</html>
