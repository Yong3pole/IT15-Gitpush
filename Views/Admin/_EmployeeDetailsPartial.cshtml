@model IT15_TripoleMedelTijol.Models.Employee

<div>
    <dl class="row">
        <!-- Personal Details -->
        <dt class="col-sm-4">Employee ID</dt>
        <dd class="col-sm-8">@Model.EmployeeID</dd>

        <dt class="col-sm-4">First Name</dt>
        <dd class="col-sm-8">@Model.FirstName</dd>

        <dt class="col-sm-4">Last Name</dt>
        <dd class="col-sm-8">@Model.LastName</dd>

        <dt class="col-sm-4">Date of Birth</dt>
        <dd class="col-sm-8">@(Model.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

        <dt class="col-sm-4">Gender</dt>
        <dd class="col-sm-8">@Model.Gender</dd>

        <!-- Job Details -->
        <dt class="col-sm-4">Job Title</dt>
        <dd class="col-sm-8">@Model.JobTitle</dd>

        <dt class="col-sm-4">Department</dt>
        <dd class="col-sm-8">@Model.Department</dd>

        <dt class="col-sm-4">Date Hired</dt>
        <dd class="col-sm-8">@(Model.DateHired.ToString("yyyy-MM-dd") ?? "N/A")</dd>

        <dt class="col-sm-4">Current Salary</dt>
        <dd class="col-sm-8">@ViewBag.CurrentSalary</dd> <!-- Display current salary -->

        <dt class="col-sm-4">Employment Status</dt>
        <dd class="col-sm-8">@Model.EmploymentStatus</dd>

        <!-- Work Contact -->
        <dt class="col-sm-4">Work Email</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Work Phone</dt>
        <dd class="col-sm-8">@Model.PhoneNumber</dd>

        <!-- Address -->
        <dt class="col-sm-4">Address</dt>
        <dd class="col-sm-8">@Model.Address</dd>

        <dt class="col-sm-4">City</dt>
        <dd class="col-sm-8">@Model.City</dd>

        <dt class="col-sm-4">Province</dt>
        <dd class="col-sm-8">@Model.Province</dd>

        <dt class="col-sm-4">Zip Code</dt>
        <dd class="col-sm-8">@Model.ZipCode</dd>

        <!-- Emergency Contacts -->
        <dt class="col-sm-4">Emergency Contact Name</dt>
        <dd class="col-sm-8">@Model.EmergencyContactName</dd>

        <dt class="col-sm-4">Emergency Contact Phone</dt>
        <dd class="col-sm-8">@Model.EmergencyContactPhone</dd>

        <dt class="col-sm-4">Emergency Contact Relation</dt>
        <dd class="col-sm-8">@Model.EmergencyContactRelation</dd>
    </dl>
</div>