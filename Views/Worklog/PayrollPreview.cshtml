@model List<PayrollViewModel>

@{
    ViewData["Title"] = "Payroll Preview";
}

<h2>Payroll Preview</h2>
<p>
    Showing payroll for <strong>@Model.FirstOrDefault()?.StartDate.ToShortDateString()</strong>
    to <strong>@Model.FirstOrDefault()?.EndDate.ToShortDateString()</strong>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Present Days</th>
            <th>Late Minutes</th>
            <th>Overtime Minutes</th>
            <th>Gross Earnings</th>
            <th>Income Tax</th>
            <th>PhilHealth</th>
            <th>SSS</th>
            <th>Pag-IBIG</th>
            <th>Total Deductions</th>
            <th>Net Earnings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payroll in Model)
        {
            <tr>
                <td>@payroll.EmployeeName</td>
                <td>@payroll.PresentDays</td>
                <td>@payroll.LateMinutes min</td>
                <td>@payroll.OvertimeMinutes min</td>
                <td>₱@payroll.GrossEarnings.ToString("N2")</td>
                <td>₱@payroll.IncomeTax.ToString("N2")</td>
                <td>₱@payroll.PhilHealthContribution.ToString("N2")</td>
                <td>₱@payroll.SSSContribution.ToString("N2")</td>
                <td>₱@payroll.PagIBIGContribution.ToString("N2")</td>
                <td>₱@payroll.TotalDeductions.ToString("N2")</td>
                <td><strong>₱@payroll.NetEarnings.ToString("N2")</strong></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back</a>
